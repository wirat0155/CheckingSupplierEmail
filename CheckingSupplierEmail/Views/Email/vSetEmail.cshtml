@using System.Linq
@using CheckingSupplierEmail.Controllers
@model EmailController.vSetEmailVM

<style>
    :root {
        --primary-color: #007bff;
        --danger-color: #dc3545;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --dark-gray: #6c757d;
        --white: #fff;
        --border-radius: 8px;
        --shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        --transition: all 0.2s ease-in-out;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--light-gray);
    }

    .user-management-container {
        padding: 20px;
        max-width: 1200px;
        margin: auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

        .page-header h1 {
            font-size: 2rem;
            color: #333;
        }

    .btn {
        padding: 10px 18px;
        border: none;
        border-radius: var(--border-radius);
        cursor: pointer;
        font-size: 1rem;
        font-weight: 500;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: var(--white);
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

    .user-card {
        background: var(--white);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        margin-bottom: 20px;
        overflow: hidden;
    }

    .user-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        background-color: #f7f7f9;
        border-bottom: 1px solid var(--medium-gray);
    }

    .user-info h3 {
        margin: 0;
        font-size: 1.2rem;
    }

    .user-info p {
        margin: 0;
        color: var(--dark-gray);
    }

    .btn-delete-user {
        background: none;
        border: none;
        color: var(--danger-color);
        font-size: 1.2rem;
        cursor: pointer;
        padding: 5px;
        transition: var(--transition);
    }

        .btn-delete-user:hover {
            color: #a71d2a;
            transform: scale(1.1);
        }

    .user-card-body {
        display: flex;
        padding: 20px;
        gap: 20px;
    }

    .data-section {
        flex: 1;
        min-width: 0; /* Important for flexbox to shrink items */
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        border-bottom: 2px solid var(--primary-color);
        padding-bottom: 8px;
    }

        .section-header h4 {
            margin: 0;
            color: #333;
        }

    .btn-add-item {
        background-color: #28a745;
        color: white;
        padding: 5px 12px;
        font-size: 0.9rem;
    }

        .btn-add-item:hover {
            background-color: #218838;
        }

    .item-list {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .item-card {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 12px;
        background-color: var(--light-gray);
        border: 1px solid var(--medium-gray);
        border-radius: var(--border-radius);
    }

    .item-card-value {
        font-weight: 600;
        background-color: var(--primary-color);
        color: var(--white);
        padding: 5px 10px;
        border-radius: 5px;
        font-family: 'Courier New', Courier, monospace;
    }

    .item-card-details {
        flex-grow: 1;
    }

        .item-card-details p {
            margin: 0;
            font-size: 0.9rem;
            line-height: 1.4;
        }

            .item-card-details p strong {
                color: var(--dark-gray);
            }

    .btn-delete-item {
        background: none;
        border: none;
        color: var(--dark-gray);
        cursor: pointer;
        transition: var(--transition);
    }

        .btn-delete-item:hover {
            color: var(--danger-color);
        }

    /* --- Responsive Design --- */
    @@media (max-width: 992px) {
        .user-card-body {
            flex-direction: column;
        }
    }

    @@media (max-width: 576px) {
        .page-header {
            flex-direction: column;
            gap: 15px;
            align-items: stretch;
        }

        .user-card-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }

        .item-card {
            flex-direction: column;
            align-items: flex-start;
        }
    }

    .editable-username {
        cursor: pointer;
        transition: color 0.2s ease-in-out;
    }

        .editable-username:hover {
            color: var(--primary-color);
        }

    .username-input {
        font-size: 1.2rem; /* ขนาดเดียวกับ h3 */
        font-weight: bold; /* ความหนาเดียวกับ h3 */
        border: 1px solid var(--primary-color);
        border-radius: 5px;
        padding: 2px 5px;
        width: 200px; /* กำหนดความกว้างตามความเหมาะสม */
    }
</style>

<div class="user-management-container">

    <div class="page-header">
        <h1>User Management</h1>
        <button class="btn btn-primary" type="button" onclick="addUsername()">
            <i class="fa fa-plus"></i> New User
        </button>
    </div>

    @foreach (var user in Model.ls_data.GroupBy(u => u.username))
    {
        var firstUser = user.First();
        <section class="user-card">

            <header class="user-card-header">
                <div class="user-info">
                    <h3 class="editable-username"
                        onclick="editUsername(this, '@firstUser.username')"
                        title="Click to edit username">
                        @firstUser.username
                    </h3>
                    <p>@firstUser.userempnameeng</p>
                </div>
                <button class="btn btn-outline-danger" type="button" onclick="deleteUser('@firstUser.username')" title="Delete User">
                    Remove
                </button>
            </header>

            <div class="user-card-body">

                <div class="data-section">
                    <div class="section-header">
                        <h4>Employee Numbers</h4>
                        <button class="btn btn-add-item" type="button" onclick="addEmpno('@firstUser.username')">
                            <i class="fa fa-plus"></i> Add
                        </button>
                    </div>
                    <div class="item-list">
                        @foreach (var emp in user.Where(t => t.type == "EMPNO"))
                        {
                            <div class="item-card">
                                <span class="item-card-value" onclick="editEmpno(this, '@emp.id')">
                                    @emp.value
                                </span>
                                <div class="item-card-details">
                                    <p><strong>Name:</strong> @emp.ccempnameeng</p>
                                    <p><strong>Dept:</strong> @emp.ccdepartmentnameeng</p>
                                    <p><strong>Email:</strong> @emp.ccemailaccount</p>
                                </div>
                                <button class="btn btn-outline-danger" type="button" onclick="deleteItem('empno', '@emp.id')" title="Delete Employee No.">
                                    Remove
                                </button>
                            </div>
                        }
                        @if (!user.Any(t => t.type == "EMPNO"))
                        {
                            <p>No employee numbers assigned.</p>
                        }
                    </div>
                </div>

                <div class="data-section">
                    <div class="section-header">
                        <h4>Additional Emails</h4>
                        <button class="btn btn-add-item" type="button" onclick="addEmail('@firstUser.username')">
                            <i class="fa fa-plus"></i> Add
                        </button>
                    </div>
                    <div class="item-list">
                        @foreach (var email in user.Where(t => t.type == "EMAIL"))
                        {
                            <div class="item-card">
                                <div class="item-card-details">
                                    <p onclick="editEmail(this, '@email.id')">@email.value</p>
                                </div>
                                <button class="btn btn-outline-danger" type="button" onclick="deleteItem('email', '@email.id')" title="Delete Email">
                                    Remove
                                </button>
                            </div>
                        }
                        @if (!user.Any(t => t.type == "EMAIL"))
                        {
                            <p>No additional emails assigned.</p>
                        }
                    </div>
                </div>

            </div>
        </section>
    }
</div>

@section Scripts {
    <script src="~/js/Email/vSetEmail.js" asp-append-version="true"></script>
}