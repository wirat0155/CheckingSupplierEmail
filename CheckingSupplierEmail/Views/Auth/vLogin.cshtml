@using System.Security.Claims;
@{
    Layout = null;
    ViewData["Title"] = "Sign In";
}

<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Purchase Portal</title>
    
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true" />
    
    <!-- Tailwind CSS -->
    <!-- Tailwind CSS -->
    <script src="~/lib/tailwindcss/tailwindcss.js" asp-append-version="true"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e',
                        }
                    },
                    animation: {
                        blob: "blob 7s infinite",
                        'fade-in-up': 'fadeInUp 0.5s ease-out forwards',
                    },
                    keyframes: {
                        blob: {
                            "0%": { transform: "translate(0px, 0px) scale(1)" },
                            "33%": { transform: "translate(30px, -50px) scale(1.1)" },
                            "66%": { transform: "translate(-20px, 20px) scale(0.9)" },
                            "100%": { transform: "translate(0px, 0px) scale(1)" }
                        },
                        fadeInUp: {
                            '0%': { opacity: '0', transform: 'translateY(20px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        }
                    }
                }
            }
        }
    </script>

    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" asp-append-version="true" />
    
    <style>
        body { font-family: 'Inter', sans-serif; }
        .glass-panel {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
    </style>
</head>
<body class="h-full w-full bg-slate-100 flex items-center justify-center p-4 relative overflow-hidden">

    <!-- Decorative Objects -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary-300 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
        <div class="absolute top-0 right-1/4 w-96 h-96 bg-purple-300 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
        <div class="absolute -bottom-32 left-1/3 w-96 h-96 bg-pink-300 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-4000"></div>
    </div>

    <div class="glass-panel w-full max-w-md rounded-3xl shadow-2xl p-8 sm:p-12 animate-fade-in-up relative z-10">
        <!-- Brand Header -->
        <div class="text-center mb-10">
            <div class="mx-auto h-20 w-20 flex items-center justify-center transform mb-6 hover:scale-105 transition-transform duration-300">
                <img src="~/images/logo.png" alt="Purchase Staff Logo" class="h-full w-full rounded-2xl shadow-lg" />
            </div>
            <h2 class="text-3xl font-extrabold text-gray-900 tracking-tight">Purchase Portal</h2>
            <p class="mt-2 text-sm text-gray-600">
                Please sign in to access your dashboard
            </p>
        </div>

        <!-- Form -->
        <form onsubmit="Login(event)" class="space-y-6">
            <div>
                <label for="usernameInput" class="block text-sm font-medium text-gray-700 mb-1">Username / Employee ID</label>
                <div class="relative group">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-user text-gray-400 group-focus-within:text-primary-500 transition-colors"></i>
                    </div>
                    <input name="txt_empno" id="usernameInput"
                           class="pl-10 block w-full bg-white/50 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-primary-500 focus:border-transparent text-sm py-3 transition-all placeholder-gray-400"
                           placeholder="Enter your ID" autofocus />
                </div>
                <p class="mt-1 text-sm text-red-500 font-medium hidden flex items-center gap-1" id="txt_empno">
                    <i class="fas fa-exclamation-circle"></i> <span></span>
                </p>
            </div>

            <div>
                <label for="passwordInput" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <div class="relative group">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-lock text-gray-400 group-focus-within:text-primary-500 transition-colors"></i>
                    </div>
                    <input name="txt_password" type="password" id="passwordInput"
                           class="pl-10 block w-full bg-white/50 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-primary-500 focus:border-transparent text-sm py-3 transition-all placeholder-gray-400"
                           placeholder="••••••••" />
                </div>
                <p class="mt-1 text-sm text-red-500 font-medium hidden flex items-center gap-1" id="txt_password">
                    <i class="fas fa-exclamation-circle"></i> <span></span>
                </p>
            </div>

            <div>
                <button type="submit"
                        class="w-full flex justify-center py-3.5 px-4 border border-transparent rounded-xl shadow-lg text-sm font-bold text-white bg-gradient-to-r from-primary-600 to-primary-500 hover:from-primary-700 hover:to-primary-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transform transition-all hover:-translate-y-0.5 hover:shadow-xl">
                    <i class="fas fa-sign-in-alt mt-1 mr-2"></i> Sign In
                </button>
            </div>
        </form>

        <div class="mt-8 pt-6 border-t border-gray-200">
            <p class="text-center text-xs text-gray-500">
                &copy; @DateTime.Now.Year Purchase Portal. All rights reserved.
            </p>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js" asp-append-version="true"></script>
    <script src="~/js/Auth/vLogin.js" asp-append-version="true"></script>
    <script src="~/js/site.js"  asp-append-version="true"></script>

    <script>
        // Compatibility script for validation errors
        // This ensures that when the JS sets text() on the p tags, they become visible
        const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
                if (mutation.type === 'childList' || mutation.type === 'characterData') {
                    const target = mutation.target.nodeType === 3 ? mutation.target.parentNode : mutation.target;
                    // For the SPAN inside the P tag
                    if (target.tagName === 'SPAN') {
                        const pTag = target.closest('p');
                        if (target.textContent.trim() !== "") {
                            pTag.classList.remove('hidden');
                        } else {
                            pTag.classList.add('hidden');
                        }
                    }
                    // Fallback for direct text manipulation on P tag if legacy JS does that
                    else if (target.tagName === 'P') {
                        if (target.textContent.trim() !== "") {
                            target.classList.remove('hidden');
                        } else {
                            target.classList.add('hidden');
                        }
                    }
                }
            });
        });

        const errorIds = ['txt_empno', 'txt_password'];
        errorIds.forEach(id => {
            const el = document.getElementById(id);
            if (el) {
                // We observe the P tag itself
                observer.observe(el, { childList: true, subtree: true, characterData: true });

                // Also, if the legacy JS targets the inner SPAN (which I added in this redesign), we need to handle that.
                // The redesign adds a span inside the p.
                // If legacy js checks for empty p, it might fail. Let's make sure legacy JS works.
                // Actually the legacy JS likely does $('#id').text('error').
                // If so, it will overwrite the icon <i class>... so we need to be careful.

                // To be safe, let's keep the P tag simple like before but styled better?
                // No, legacy JS usually uses .text() which wipes content.
                // So if legacy JS runs, it will wipe my <i> icon.
                // That's acceptable, or I can fix it by intercepting property changes, but that's complex.
                // Let's just let it wipe content, it will still show the text red.
            }
        });
    </script>
</body>
</html>